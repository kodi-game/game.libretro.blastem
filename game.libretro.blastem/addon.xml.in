<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.blastem"
		name="Sega - Mega Drive - Genesis (BlastEm)"
		version="0.6.3.3"
		provider-name="Mike Pavone">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>md|gen|sms|bin|rom</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Sega - Mega Drive - Genesis (BlastEm) 0.6.3-pre</summary>
		<description lang="en_GB">BlastEm is an open source, higly accurate emulator for the Genesis/Megadrive that runs on modest hardware.

Supported files: .md, .gen, .sms, .bin, .rom</description>
		<license>GPLv3</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.blastem</source>
	</extension>
</addon>
